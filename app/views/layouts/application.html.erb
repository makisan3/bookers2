<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white pt-5 pb-4">
    <div class="container">
    <div class="row">
    <%= link_to "Bookers", "/", class: 'navbar-brand text-light' %>
      <% if user_signed_in? %>
      
        <li>
          <%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %>
        </li>
        <li>
          <%= link_to "Users", user_path(current_user.id), class: 'fas fa-users nav-link text-light' %>
        </li>
        <li>
          <%= link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>
        </li>
        <li>
          <%= link_to "logout", destroy_user_session_path, method: :delete , class: 'fas fa-sign-out-alt nav-link text-light'%>
        </li>

      <% else %>
        <li>
          <%= link_to "Home", root_path, class: 'nav-link text-light' %>
        </li>
        <li>
          <%= link_to "About", about_path, class: 'nav-link text-light' %>
        </li>
        <li>
          <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-light' %>
        </li>
        <li>
          <%= link_to "login", new_user_session_path, class: 'nav-link text-light' %>
        </li>
      <% end %>
      </div>
    </div>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
      <div class="row">
      <p class="mx-auto">CopyRight Infratop.inc</p>
      </div>
      </div>
    </footer>

  </body>
</html>
